<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NuMo_Tabbed.Views.SelectVisualizePage"
             Title="Visualize Nutritional Information">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Visualize Nutrients" WidthRequest="175" HeightRequest="50" HorizontalOptions="Center" Clicked="AddVisualize"/>
            <Button Text="View DRI Values" WidthRequest="175" BackgroundColor="#76c1c4" HeightRequest="50" HorizontalOptions="Center" Clicked="AddDRI" />
            <Button Text="View Hydration" HeightRequest="50" HorizontalOptions="Center" Clicked="AddHydration" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>