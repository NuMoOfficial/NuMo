<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NuMo_Tabbed.Views.SelectVisualizePage"
             Title="Visualize Nutritional Information">
    <ContentPage.Content>
        <StackLayout>

            <Button Text="Visualize Nutrients" Margin="0, 5.5, 0, 0" Clicked="AddVisualize" Style="{StaticResource buttonStyle}"/>
            <Button Text="View DRI Values" Clicked="AddDRI" Style="{StaticResource buttonStyle}"/>
            <Button Text="View Hydration" Clicked="AddHydration" Style="{StaticResource buttonStyle}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>